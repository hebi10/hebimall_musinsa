{
  "name": "hebimall",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "seed": "node scripts/seed-data.js",
    "seed:categories": "node scripts/seed-categories.js",
    "seed:users": "node scripts/seed-users.js",
    "seed:coupons": "node scripts/seed-coupons.js",
    "deploy:firebase": "npm run build && cp -r .next functions/ && firebase deploy",
    "deploy:prep": "npm run build && cp -r .next functions/ && cp -r node_modules functions/",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "setup:env": "node scripts/setup-firebase-secrets.js",
    "functions:build": "cd functions && npm run build",
    "functions:deploy": "npm run functions:build && firebase deploy --only functions"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-query-devtools": "^5.84.1",
    "dotenv": "^17.2.1",
    "firebase": "^12.0.0",
    "firebase-admin": "^13.4.0",
    "next": "^15.4.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "terser-webpack-plugin": "^5.3.14",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
